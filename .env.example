# Immich Connection Settings
IMMICH_URL=https://your-immich-instance.com
IMMICH_API_KEY=your_api_key_here

# Display Settings
# Optional: Album ID to show (leave empty for Favorites)
ALBUM_ID=

# Interval in seconds per slide
INTERVAL=15

# Transition type: fade, slide, zoom, none
TRANSITION=fade

# Image fit: cover (fills screen), contain (whole image)
IMAGE_FIT=cover

# Server Settings
PORT=3000
